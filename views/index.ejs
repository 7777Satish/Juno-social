<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Juno | Modern Social Media App</title>
    <link rel="stylesheet" href="style.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Righteous&display=swap" rel="stylesheet">

    <!-- Google Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Local JS -->
     <script src="functions.js"></script>
</head>

<body>

    <nav>
        <h1>Juno</h1>
        <ul>
            <li><span class="material-symbols-outlined">home</span><strong>Home</strong></li>
            <li><span class="material-symbols-outlined">search</span>Search</li>
            <li><span class="material-symbols-outlined">notifications</span>Notifications</li>
            <li><span class="material-symbols-outlined">message</span>Messages</li>
            <li><span class="material-symbols-outlined">account_circle</span>Profile</li>
            <li><span class="material-symbols-outlined">logout</span><a href="/logout">Sign Out</a></li>
        </ul>
        <span class="profile">
            <div class="image">
                <img alt="image" src="https://picsum.photos/35?random=<%= Math.floor(Math.random()*1000)%>"/>
            </div>
            <div>
                <span><%= user.fullname %></span>
                <span class="username">@<%= user.username %></span>
            </div>
            <span class="more material-symbols-outlined">more_horiz</span>
        </span>
    </nav>
    

    <main>

        <section class="user">
            <form onsubmit="handleForm(event)" method="POST" action="/newpost">
                <span>
                    <div class="image">
                        <img alt="image" src="https://picsum.photos/30?random=<%= Math.floor(Math.random()*1000)%>"/>
                    </div>
                    <%= user.fullname%>,
                </span>
                <div class="input">
                    <textarea required maxlength="500" rows="1" cols="30" id="content" name="content" placeholder="What is happening?"></textarea>
                    <div class="imagemenu" id="imagemenu" onclick="imageMenuPopupClose(1)">
                        <div class="maincontent" onclick="event.stopPropagation()">
                            <div class="top">
                                <h3>Enter the URL of the image:</h3>
                                <input type="url" id="imagefield" maxlength="500" name="image" type="text" placeholder="image url"/>
                            </div>
                            <div class="bottom">
                                <span onclick="imageMenuPopupClose(1)">Done</span>
                                <span onclick="imageMenuPopupClose(0)">Cancel</span>
                            </div>
                        </div>
                    </div>
                    <span onclick="imageMenuPopupOpen()" class="material-symbols-outlined">image</span>
                </div>
                <button>POST</button>
            </form>
        </section>

        <section class="posts" id="allPosts">
            <% posts.forEach(element => { %>
                <article data-postid=<%= element.postid %>>
                    <div class="top">
                        <div class="left">
                            <img alt="image" src="https://picsum.photos/30?random=<%= Math.floor(Math.random()*100)%>"/>
                        </div>
                        <div class="right">
                            <h3><a href="#"><%= element.fullname %></a> <span>@<%= element.username %></span></h3>
                            <span><%= new Date(element.date).toDateString() %></span>
                        </div>
                    </div>
                    <div class="content">
                        <p><%= element.content %></p>
                        <% if(element.image && element.image!='NULL'){ %>
                            <img alt="image" src=<%= element.image %> />
                        <% } else { %>
                            <img alt="image" src="https://picsum.photos/500/350?random=<%= Math.floor(Math.random()*10) %>"/>
                        <% } %>
                    </div>
                    <div class="actions">
                        <div class="left">
                            <button class="<%= element.liked ? 'liked' : '' %>" onclick="likepost(event)">
                                <span class="material-symbols-outlined">favorite</span>
                                <span><%= element.likes %></span>
                            </button>
                            <button>
                                <span class="material-symbols-outlined">comment</span>
                                <span><%= element.comments %></span>
                            </button>
                        </div>
                        <div class="right">
                            <button><span class="material-symbols-outlined">bookmark</span></button>
                            <button><span class="material-symbols-outlined">reply</span></button>
                        </div>
                    </div>
                </article><br/>
            <% }) %>
        </section>

        <section class="moreposts" id="thereadend">
            Loading more posts...
        </section>

    </main>


    <footer>
        <div class="main">

            <section class="search">
                <form action="/search" method="GET">
                    <span class="material-symbols-outlined">search</span>
                    <input type="text" name="query" placeholder="Search"/>
                </form>
            </section>

            <section class="profiles">
                <h2>Top Profiles</h2>
                <ul>
                    <% topProfiles.forEach(element => { %>
                    <li>
                        <div class="container">
                            <div class="image">
                                <img alt="image" src="https://picsum.photos/30?random=<%= Math.floor(Math.random()*100)%>"/>
                            </div>
                            <div class="name">
                                <strong><%= element.fullname %></strong> 
                                <span>@<%= element.username %></span>
                            </div>
                        </div>
                        <button>Follow</button>
                    </li>
                    <% }); %>
                    
                </ul>
            </section>

            <section>
                <h2>Trending Topics</h2>
                <ul>
                    <li><a href="#">#Technology</a></li>
                    <li><a href="#">#Health</a></li>
                    <li><a href="#">#Travel</a></li>
                    <li><a href="#">#Education</a></li>
                    <li><a href="#">#Entertainment</a></li>
                </ul>
            </section>

            <section>
                copyright &copy; Satish Singh @ 2025<br/>All Rights Reserved
            </section>
        </div>

    </footer>

    <script defer src="main.js"></script>
</body>

</html>